{% extends 'base.html.twig' %}

{% block title %}Hello CineController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
<h1>Liste des films du moment !</h1>

    <table>
    <div class="card">
    {% for movies in movies.results %}
        <tr>
            <img src="{{ ImagePrefix }}{{ movies.poster_path }}">
        </tr>
        <tr>
            <h2><a href="{{ movies.id }}">{{ movies.title }} ({{ movies.original_language }}), {{ movies.release_date }}</a></h>
            <h4>{{ movies.overview }}</h>
        </tr>
        <br><br><br>
    {% endfor %}
    </table>

</div>
{% endblock %}